<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.feinstein.technicaltest_mf"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="br.com.feinstein.technicaltest_mf.TechnicalTest_MF_App"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.feinstein.technicaltest_mf.activities.RepositoryListActivity"
            android:label="@string/title_repositories"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.feinstein.technicaltest_mf.activities.RepositoryDetailActivity"
            android:label="@string/title_repository_detail"
            android:parentActivityName="br.com.feinstein.technicaltest_mf.activities.RepositoryListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.feinstein.technicaltest_mf.activities.RepositoryListActivity" />
        </activity>

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="br.com.feinstein.technicaltest_mf.com.squareup.picasso"
            android:exported="false" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="br.com.feinstein.technicaltest_mf.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>